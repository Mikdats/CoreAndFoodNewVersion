@model List<CoreAndFood.Data.Models.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Category List</h2>
<br />
@using (Html.BeginForm())
{
    <p>
        Category Name:@Html.TextBox("p")
        <input type="submit" value="Find"/>
    </p>
}
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Category Name</th>
        <th>Category Description</th>
      @*  <th>Status</th>*@
        <th>Delete</th>
        <th>Update</th>
        <th>Detail</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.CategoryID</td>
            <td>@x.CategoryName</td>
            <td>@x.CategoryDescription</td>
            @*<td>@x.Status</td>*@
            <td><a href="/Category/CategoryDelete/@x.CategoryID" class="btn btn-danger">Delete</a>
            <td><a href="/Category/CategoryGet/@x.CategoryID" class="btn btn-success">Update</a>
            <td><a href="/Category/CategoryDetail/@x.CategoryID" class="btn btn-primary">Detail</a>
            
        </tr>
    }
</table>
<a href="/Category/CategoryAdd/" class="btn btn-primary">New Category</a>

